<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vladlozkin.libgdk_protector" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_protector"
        android:isGame="true"
        android:appCategory="game"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/GdxTheme" >
        <activity
            android:name="com.vladlozkin.libgdk_protector.AndroidLauncher"
            android:label="@string/app_name" 
            android:screenOrientation="landscape"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation|screenSize|screenLayout">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vladlozkin.libgdk_protector.WelcomeActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.vladlozkin.libgdk_protector.LeaderBoardActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.vladlozkin.libgdk_protector.BetweenLevelsScreen"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.vladlozkin.libgdk_protector.GameOverActivity"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
